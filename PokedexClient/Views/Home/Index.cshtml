@{
    ViewData["Title"] = "Home Page";
}

<div class="center-page">
    <div class="text-center">
        <h1>WELCOME TO THE POKEDEX</h1>
    </div>
    <div class="text-center container">
        
    </div>
    <div class="text-center container">
        @using (Html.BeginForm("Search", "Pokemons", FormMethod.Post))
        {
            <label for="name">Pokemon Name: </label>
            <input type="text" name="name" />
            <button type="submit" class="btn customBtn border me-3">
                <span class="hoverRed">Sea</span><span class="hoverWhite">rch!</span>
            </button>
            <button class="btn border" type="button" data-bs-toggle="collapse" data-bs-target="#filterCollapse">
                Filters
            </button>
            <div id="filterCollapse" class="collapse types-container">
                @foreach(var type in ViewBag.Types)
                {
                    <form 
                        method="post" 
                        action="/Pokemons/Search" 
                        class="checkbox-container @type.Key" data-type="@type.Key"
                    >
                        <input type="hidden" name="typeName" value="@type.Key">
                        <button type="submit" class="@type.Key type-label">@type.Key</button>
                    </form>
                }
            </div>
        }
    </div>
</div>