@{
    ViewData["Title"] = "Home Page";
}

<div class="text-center">
    <h1> WELCOME TO THE POKEDEX </h1>
</div>
<div class= "center-text container">
    <h1>Pokedex Search</h1>
    <br>
        @using (Html.BeginForm("Search", "Pokemons", FormMethod.Post ))
        {
            <label for="name">Pokemon Name: </label>
            <input type="text" name="name" />
            <br>
            <br>
            @foreach(var type in ViewBag.Types)
            {
                <div class="checkbox-container @type.Key">
                    <input type="checkbox" name="types" value="@type.Value" id="@type.Key" class="custom-checkbox"/>
                    <label for="@type.Key" class="@type.Key type-label">@type.Key</label>
                </div>
            }
            <br>
            <button type="submit" class="btn btn-success">Search</button>
        }
</div>