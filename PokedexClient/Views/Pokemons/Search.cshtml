@{
    Layout = "_Layout";
}

<div class= "container">
    <h1>Pokedex Search</h1>
        @using (Html.BeginForm("Search", "Pokemons", FormMethod.Post ))
        {
            <div class="input-group">
                <input type="text" class="form-control mx-5" name="name" placeholder="Search by stylist name" />
                <div class="input-group-append">
                    <button type="submit" class="btn customBtn border me-3"><span class="hoverRed">Sea</span> <span class="hoverWhite">rch</span></button>
                    <button class="btn border me-5" type="button" data-bs-toggle="collapse" data-bs-target="#filterCollapse">
                        Filters
                    </button>
                </div>
        </div>
                <div id="filterCollapse" class="collapse">

            @foreach(var type in ViewBag.Types)
            {
                <div class="checkbox-container @type.Key">
                    <input type="checkbox" name="types" value="@type.Value" id="@type.Key" class="custom-checkbox"/>
                    <label for="@type.Key" class="@type.Key type-label">@type.Key</label>
                </div>
            }
                </div>
        }
    </div>

<div class="card-container">
    @if(Model.Count == 0)
    { 
        <div class="card-content">
            <p>Sorry no pokemon matched your search.</p>
        </div>
    }
    @foreach (Pokemon pokemon in Model)
    {
<a href="/pokemons/details/@pokemon.PokemonId">
            <div class="card-content">
                <p class="whiteColorText">@pokemon.Number</p>
                <h2 class="whiteColorText text-center">@pokemon.Name</h2>
                <img src="/images/@(pokemon.PokemonId).png" width="200px" /> 
                <p class="redColorText">@pokemon.Type1</p>
                <p class="redColorText">@pokemon.Type2</p>   
            </div>
        </a>
    }
</div>

<p>@Html.ActionLink("Home", "Index", "Home")</p>

